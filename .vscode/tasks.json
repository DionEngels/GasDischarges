{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "g++ build active file",
			"command": "/usr/bin/g++",
			"args": ["-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
			"options": {
			  "cwd": "/usr/bin"
			},
			"problemMatcher": ["$gcc"],
			"group": "build"
		},		
		{
			"label": "Make",
			"type": "shell",
			"command": "make",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": "build"
		},
		{
			"label": "Clean make",
			"type": "shell",
			"command": "make clean",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": "build"
		}
	]
}